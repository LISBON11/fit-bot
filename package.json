{
  "name": "fit-tel-bot",
  "version": "1.0.0",
  "description": "Telegram-бот для записи и публикации тренировок",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit -p tsconfig.eslint.json",
    "format": "prettier --write src",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.integration.config.mjs --runInBand",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "postinstall": "lefthook install"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LISBON11/fit-bot.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LISBON11/fit-bot/issues"
  },
  "homepage": "https://github.com/LISBON11/fit-bot#readme",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.15.0",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "jest-ts-webcompat-resolver": "^1.0.1",
    "lefthook": "^2.1.1",
    "prettier": "^3.8.1",
    "prisma": "^6.8.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.3",
    "@grammyjs/auto-chat-action": "^0.1.1",
    "@grammyjs/conversations": "^2.1.1",
    "@prisma/client": "^6.8.0",
    "grammy": "^1.40.0",
    "ioredis": "^5.4.0",
    "openai": "^6.22.0",
    "pino": "^9.0.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.1"
  }
}
